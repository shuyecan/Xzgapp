<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mission"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_mission_missionname"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/tv_mission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_mission"
        android:layout_alignStart="@+id/img_mission"
        android:layout_below="@+id/img_mission"
        android:gravity="center"
        android:text="麦立丰" />

    <TextView
        android:id="@+id/tv_mission_missionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/img_mission"
        android:text="麦立丰"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_mission_missionname"
        android:layout_below="@+id/img_mission"
        android:text="+3000"
        android:id="@+id/tv_mission_jia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_mission"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tv_mission_jia"
        android:text="+3000"
        android:id="@+id/tv_mission_jian" />

    <TextView
        android:id="@+id/tv_mission_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mission_jian"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="截止日期:2018-08-20" />

    <TextView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:id="@+id/tv_mission_id"
        android:layout_height="wrap_content" />
</RelativeLayout>
